// FcxDialog Component Styles - PrimeVue Dialog Integration

// CSS Custom Properties for theming
:root {
  // Dialog backdrop
  --fcx-dialog-backdrop: rgba(0, 0, 0, 0.6);
  --fcx-dialog-backdrop-blur: 12px;
  
  // Dialog container
  --fcx-dialog-bg: #ffffff;
  --fcx-dialog-border: #d1d5db;
  --fcx-dialog-border-radius: 16px;
  --fcx-dialog-shadow: 0 32px 64px -12px rgba(0, 0, 0, 0.35), 0 25px 50px -12px rgba(0, 0, 0, 0.25), 0 20px 25px -5px rgba(0, 0, 0, 0.15), 0 10px 10px -5px rgba(0, 0, 0, 0.08);
  
  // Dialog header
  --fcx-dialog-header-bg: #ffffff;
  --fcx-dialog-header-border: #e5e7eb;
  --fcx-dialog-header-padding: 1.5rem;
  --fcx-dialog-header-text: #1f2937;
  --fcx-dialog-header-font-size: 1.125rem;
  --fcx-dialog-header-font-weight: 600;
  
  // Dialog content
  --fcx-dialog-content-bg: #ffffff;
  --fcx-dialog-content-padding: 1.5rem;
  --fcx-dialog-content-text: #374151;
  
  // Dialog footer
  --fcx-dialog-footer-bg: #f9fafb;
  --fcx-dialog-footer-border: #e5e7eb;
  --fcx-dialog-footer-padding: 1rem 1.5rem;
  
  // Dialog controls
  --fcx-dialog-close-color: #6b7280;
  --fcx-dialog-close-hover-color: #374151;
  --fcx-dialog-close-hover-bg: #f3f4f6;
  
  // Z-index
  --fcx-dialog-z-index: 1100;
  --fcx-dialog-backdrop-z-index: 1099;
}

// Dark theme variables
:root[data-theme="dark"] {
  --fcx-dialog-backdrop: rgba(0, 0, 0, 0.6);
  --fcx-dialog-bg: #1f2937;
  --fcx-dialog-border: #374151;
  --fcx-dialog-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.2);
  
  --fcx-dialog-header-bg: #1f2937;
  --fcx-dialog-header-border: #374151;
  --fcx-dialog-header-text: #f9fafb;
  
  --fcx-dialog-content-bg: #1f2937;
  --fcx-dialog-content-text: #d1d5db;
  
  --fcx-dialog-footer-bg: #111827;
  --fcx-dialog-footer-border: #374151;
  
  --fcx-dialog-close-color: #9ca3af;
  --fcx-dialog-close-hover-color: #f3f4f6;
  --fcx-dialog-close-hover-bg: #374151;
}

// Override PrimeVue Dialog styles with FcxDialog custom styling
:deep(.p-dialog-mask) {
  background: var(--fcx-dialog-backdrop) !important;
  backdrop-filter: blur(var(--fcx-dialog-backdrop-blur)) saturate(180%) !important;
  -webkit-backdrop-filter: blur(var(--fcx-dialog-backdrop-blur)) saturate(180%) !important;
}

:deep(.p-dialog) {
  background: var(--fcx-dialog-bg) !important;
  border: 1px solid var(--fcx-dialog-border) !important;
  border-radius: var(--fcx-dialog-border-radius) !important;
  box-shadow: var(--fcx-dialog-shadow) !important;
}

// Size variants
:deep(.p-dialog.fcx-dialog--small),
:deep(.p-dialog.fcx-dialog--s) {
  width: 95vw !important;
  max-width: 400px !important;
  min-width: 300px !important;
}

:deep(.p-dialog.fcx-dialog--medium),
:deep(.p-dialog.fcx-dialog--m) {
  width: 90vw !important;
  max-width: 500px !important;
  min-width: 350px !important;
}

:deep(.p-dialog.fcx-dialog--large),
:deep(.p-dialog.fcx-dialog--l) {
  width: 95vw !important;
  max-width: 800px !important;
  min-width: 600px !important;
}

:deep(.p-dialog.fcx-dialog--xl) {
  width: 95vw !important;
  max-width: 1200px !important;
  min-width: 800px !important;
}

:deep(.p-dialog.fcx-dialog--fullscreen) {
  width: 100vw !important;
  height: 100vh !important;
  max-width: none !important;
  max-height: none !important;
  border-radius: 0 !important;
  margin: 0 !important;
}

// Theme variants
:deep(.p-dialog.fcx-dialog--minimal) {
  border: none !important;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06) !important;
}

:deep(.p-dialog.fcx-dialog--bordered) {
  border-width: 2px !important;
}

// Rounded corners
:deep(.p-dialog.fcx-dialog--rounded) {
  border-radius: 12px !important;
}
  
// Shadow variants
:deep(.p-dialog.fcx-dialog--shadow) {
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25) !important;
}

// Maximized state
:deep(.p-dialog.fcx-dialog--maximized) {
  width: 100vw !important;
  height: 100vh !important;
  max-width: none !important;
  max-height: none !important;
  top: 0 !important;
  left: 0 !important;
  border-radius: 0 !important;
  transform: none !important;
}

:deep(.p-dialog-header) {
  background: var(--fcx-dialog-header-bg) !important;
  border-bottom: 1px solid var(--fcx-dialog-header-border) !important;
  padding: var(--fcx-dialog-header-padding) !important;
  
  .p-dialog-title {
    color: var(--fcx-dialog-header-text) !important;
    font-size: var(--fcx-dialog-header-font-size) !important;
    font-weight: var(--fcx-dialog-header-font-weight) !important;
  }
}

:deep(.p-dialog-content) {
  background: var(--fcx-dialog-content-bg) !important;
  color: var(--fcx-dialog-content-text) !important;
  padding: var(--fcx-dialog-content-padding) !important;
}

:deep(.p-dialog-footer) {
  background: var(--fcx-dialog-footer-bg) !important;
  border-top: 1px solid var(--fcx-dialog-footer-border) !important;
  padding: var(--fcx-dialog-footer-padding) !important;
  display: flex !important;
  align-items: center !important;
  justify-content: flex-end !important;
  gap: 0.75rem !important;
}

:deep(.p-dialog-header-icons) {
  .p-dialog-header-icon {
    width: 2rem !important;
    height: 2rem !important;
    color: var(--fcx-dialog-close-color) !important;
    border-radius: 4px !important;
    transition: all 0.2s ease !important;
    
    &:hover {
      color: var(--fcx-dialog-close-hover-color) !important;
      background: var(--fcx-dialog-close-hover-bg) !important;
    }
    
    &:focus {
      outline: none !important;
      box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.3) !important;
    }
  }
}

// Responsive overrides for PrimeVue Dialog
@media (max-width: 768px) {
  :deep(.p-dialog.fcx-dialog--small),
  :deep(.p-dialog.fcx-dialog--medium),
  :deep(.p-dialog.fcx-dialog--large) {
    width: 100% !important;
    max-width: none !important;
    margin: 0 !important;
  }
  
  :deep(.p-dialog-header) {
    padding: 1rem !important;
  }
  
  :deep(.p-dialog-content) {
    padding: 1rem !important;
  }
  
  :deep(.p-dialog-footer) {
    padding: 0.75rem 1rem !important;
    flex-direction: column-reverse !important;
    gap: 0.5rem !important;
    
    > * {
      width: 100% !important;
    }
  }
}

@media (max-width: 480px) {
  :deep(.p-dialog) {
    width: 100% !important;
    height: auto !important;
    max-height: 90vh !important;
    border-radius: 1rem 1rem 0 0 !important;
    margin: 0 !important;
  }
}

// Dialog backdrop/mask
fcx-dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--fcx-dialog-backdrop) !important;
  backdrop-filter: blur(var(--fcx-dialog-backdrop-blur)) saturate(180%) !important;
  -webkit-backdrop-filter: blur(var(--fcx-dialog-backdrop-blur)) saturate(180%) !important;
  z-index: var(--fcx-dialog-backdrop-z-index);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 1rem;
}

.fcx-dialog-mask--modal {
  pointer-events: auto;
}

.fcx-dialog-mask--non-modal {
  pointer-events: none;
}
}

// Dialog container
fcx-dialog {
  background: var(--fcx-dialog-bg) !important;
  border: 1px solid var(--fcx-dialog-border) !important;
  border-radius: var(--fcx-dialog-border-radius) !important;
  box-shadow: var(--fcx-dialog-shadow) !important;
  display: flex;
  flex-direction: column;
  max-height: 90vh;
  max-width: 90vw;
  position: relative;
  z-index: var(--fcx-dialog-z-index);
  pointer-events: auto;
  
  // Ensure white background is always prominent
  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #ffffff !important;
    border-radius: inherit;
    z-index: -1;
  }
  
  // Size variants
}

.fcx-dialog--small {
  width: 400px;
  min-width: 300px;
}

.fcx-dialog--medium {
  width: 600px;
  min-width: 400px;
}

.fcx-dialog--large {
  width: 800px;
  min-width: 600px;
}

.fcx-dialog--fullscreen {
  width: 100vw;
  height: 100vh;
  max-width: none;
  max-height: none;
  border-radius: 0;
  margin: 0;
}

// Theme variants
.fcx-dialog--minimal {
  border: none;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

.fcx-dialog--bordered {
  border-width: 2px;
}

// Rounded corners
.fcx-dialog--rounded {
  border-radius: 12px;
}

// Shadow variants
.fcx-dialog--shadow {
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
}

// Draggable state
.fcx-dialog--dragging {
  user-select: none;
  cursor: move;
}

// Resizable state
.fcx-dialog--resizing {
  user-select: none;
}

// Maximized state
.fcx-dialog--maximized {
  width: 100vw !important;
  height: 100vh !important;
  max-width: none !important;
  max-height: none !important;
  top: 0 !important;
  left: 0 !important;
  border-radius: 0;
  transform: none !important;
}

// Dialog header
.fcx-dialog-header {
  background: var(--fcx-dialog-header-bg);
  border-bottom: 1px solid var(--fcx-dialog-header-border);
  padding: var(--fcx-dialog-header-padding);
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-shrink: 0;
}

.fcx-dialog-header--draggable {
  cursor: move;
    user-select: none;
  }
}

fcx-dialog-title {
  color: var(--fcx-dialog-header-text);
  font-size: var(--fcx-dialog-header-font-size);
  font-weight: var(--fcx-dialog-header-font-weight);
  margin: 0;
  flex: 1;
  line-height: 1.5;
}

// Dialog header icons
fcx-dialog-header-icons {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

fcx-dialog-header-icon {
  width: 2rem;
  height: 2rem;
  border: none;
  background: transparent;
  color: var(--fcx-dialog-close-color);
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
  
  &:hover {
    color: var(--fcx-dialog-close-hover-color);
    background: var(--fcx-dialog-close-hover-bg);
  }
  
  &:focus {
    outline: none;
    box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.3);
  }
  
  i {
    font-size: 1rem;
  }
}

// Dialog content
fcx-dialog-content {
  background: var(--fcx-dialog-content-bg);
  color: var(--fcx-dialog-content-text);
  padding: var(--fcx-dialog-content-padding);
  flex: 1;
  overflow: auto;
  
  &fcx-dialog-content--no-padding {
    padding: 0;
  }
}

// Dialog footer
fcx-dialog-footer {
  background: var(--fcx-dialog-footer-bg);
  border-top: 1px solid var(--fcx-dialog-footer-border);
  padding: var(--fcx-dialog-footer-padding);
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 0.75rem;
}

// Resize handles
fcx-dialog-resize-handle {
  position: absolute;
  background: transparent;
  
  &fcx-dialog-resize-handle--n {
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    cursor: n-resize;
  }
  
  &fcx-dialog-resize-handle--s {
    bottom: 0;
    left: 0;
    right: 0;
    height: 4px;
    cursor: s-resize;
  }
  
  &fcx-dialog-resize-handle--e {
    top: 0;
    right: 0;
    bottom: 0;
    width: 4px;
    cursor: e-resize;
  }
  
  &fcx-dialog-resize-handle--w {
    top: 0;
    left: 0;
    bottom: 0;
    width: 4px;
    cursor: w-resize;
  }
  
  &fcx-dialog-resize-handle--ne {
    top: 0;
    right: 0;
    width: 8px;
    height: 8px;
    cursor: ne-resize;
  }
  
  &fcx-dialog-resize-handle--nw {
    top: 0;
    left: 0;
    width: 8px;
    height: 8px;
    cursor: nw-resize;
  }
  
  &fcx-dialog-resize-handle--se {
    bottom: 0;
    right: 0;
    width: 8px;
    height: 8px;
    cursor: se-resize;
  }
  
  &fcx-dialog-resize-handle--sw {
    bottom: 0;
    left: 0;
    width: 8px;
    height: 8px;
    cursor: sw-resize;
  }
}

// Position classes
fcx-dialog-mask--center {
  align-items: center;
  justify-content: center;
}

fcx-dialog-mask--top {
  align-items: flex-start;
  justify-content: center;
  padding-top: 2rem;
}

fcx-dialog-mask--bottom {
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 2rem;
}

fcx-dialog-mask--left {
  align-items: center;
  justify-content: flex-start;
  padding-left: 2rem;
}

fcx-dialog-mask--right {
  align-items: center;
  justify-content: flex-end;
  padding-right: 2rem;
}

fcx-dialog-mask--topleft {
  align-items: flex-start;
  justify-content: flex-start;
  padding: 2rem;
}

fcx-dialog-mask--topright {
  align-items: flex-start;
  justify-content: flex-end;
  padding: 2rem;
}

fcx-dialog-mask--bottomleft {
  align-items: flex-end;
  justify-content: flex-start;
  padding: 2rem;
}

fcx-dialog-mask--bottomright {
  align-items: flex-end;
  justify-content: flex-end;
  padding: 2rem;
}

// Animations
fcx-dialog-enter-active,
fcx-dialog-leave-active {
  transition: all 0.3s ease;
}

fcx-dialog-enter-from,
fcx-dialog-leave-to {
  opacity: 0;
  transform: scale(0.9);
}

fcx-dialog-mask-enter-active,
fcx-dialog-mask-leave-active {
  transition: opacity 0.3s ease;
}

fcx-dialog-mask-enter-from,
fcx-dialog-mask-leave-to {
  opacity: 0;
}

// Responsive design
@media (max-width: 768px) {
  fcx-dialog-mask {
    padding: 0.5rem;
  }
  
  fcx-dialog {
    &fcx-dialog--small,
    &fcx-dialog--medium,
    &fcx-dialog--large {
      width: 100%;
      max-width: none;
      margin: 0;
    }
  }
  
  fcx-dialog-header {
    padding: 1rem;
  }
  
  fcx-dialog-content {
    padding: 1rem;
  }
  
  fcx-dialog-footer {
    padding: 0.75rem 1rem;
    flex-direction: column-reverse;
    gap: 0.5rem;
    
    > * {
      width: 100%;
    }
  }
}

@media (max-width: 480px) {
  fcx-dialog-mask {
    padding: 0;
    align-items: flex-end !important;
    justify-content: center !important;
  }
  
  fcx-dialog {
    width: 100% !important;
    height: auto !important;
    max-height: 90vh !important;
    border-radius: 1rem 1rem 0 0 !important;
    margin: 0 !important;
  }
}

// RTL support
[dir="rtl"] {
  fcx-dialog-header {
    direction: rtl;
  }
  
  fcx-dialog-footer {
    justify-content: flex-start;
  }
  
  fcx-dialog-header-icons {
    order: -1;
  }
}

// High contrast mode
@media (prefers-contrast: high) {
  fcx-dialog {
    border-width: 2px;
  }
  
  fcx-dialog-header,
  fcx-dialog-footer {
    border-width: 2px;
  }
}

// Reduced motion
@media (prefers-reduced-motion: reduce) {
  fcx-dialog-enter-active,
  fcx-dialog-leave-active,
  fcx-dialog-mask-enter-active,
  fcx-dialog-mask-leave-active {
    transition: none;
  }
  
  fcx-dialog-header-icon {
    transition: none;
  }
}

// Print styles
@media print {
  fcx-dialog-mask {
    position: static;
    background: none;
    backdrop-filter: none;
    -webkit-backdrop-filter: none;
  }
  
  fcx-dialog {
    box-shadow: none;
    border: 1px solid #000;
    max-width: none;
    max-height: none;
    width: 100%;
    height: auto;
  }
  
  fcx-dialog-header-icons {
    display: none;
  }
}
